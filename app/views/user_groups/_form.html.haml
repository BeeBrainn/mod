= form_for @user_group do |f|
  -if @user_group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_group.errors.count, "error")} prohibited this user_group from being saved:"
      %ul
        - @user_group.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "Имя группы:" 
    = f.text_field :name
  .field
    = f.label "Минимальный заказ:"
    = f.number_field :least_order
  .field
    = f.label "Admin"
    = f.check_box :admin_flag
  .actions
    = f.submit 'Save'

