= form_for @product_size do |f|
  -if @product_size.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_size.errors.count, "error")} prohibited this product_size from being saved:"
      %ul
        - @product_size.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :product_color_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :count
    = f.number_field :count
  .field
    = f.label :reserv
    = f.number_field :reserv
  .field
    = f.label :number
    = f.number_field :number
  .actions
    = f.submit 'Save'
