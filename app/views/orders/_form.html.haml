- if @current_user
  = form_for @order do |f|
    -if @order.errors.any?
      #error_explanation
        %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
        %ul
          - @order.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.hidden_field :organization_id
    .field
      = f.label "Организация:"
      = f.text_field :organization
    .field
      = f.label "Резерв"
      = f.check_box :reserv_flag
    .actions
      = f.submit 'Разместить заказ'

-else
  = form_for @order do |f|
    -if @order.errors.any?
      #error_explanation
        %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
        %ul
          - @order.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.hidden_field :organization_id
    .field
      = f.label "Ваше имя"
      = f.text_field :name
    .field
      = f.label :email
      = f.email_field :email
    .field
      = f.label "Детали (можете указать здесь контактный телефон и прочую информацию)"
      %br
      = f.text_area :details
    .actions
      = f.submit 'Разместить заказ'
