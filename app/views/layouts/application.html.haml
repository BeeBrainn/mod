!!!
%html
	%head
		%title Modern Import
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		#header Modern Import
		#nav
			= link_to "Главная", "/"
			= link_to "Склад", "/products"
			= link_to "Контакты", "/contact"
			= link_to "Админ", "/adminpage"
			%br
			%br
			%br
			- if @current_user
				%p 
					Logged in as 
					= @current_user.name
				%p
					Last time in
					= @current_user.updated_at.to_date
				= link_to "Log out", logout_path, method: :delete
			- else
				= link_to "Sign up", "/register"
				or
				= link_to "log in", login_path
			- flash.each do |name, msg|
				= content_tag :div, msg, :id => "flash_#{name}"
		#left_main_column
			#cart
				%h6 Привет, корзина
			#left_main_menu
				= link_to "Футболки", "/products/1"
				= link_to "Рубашки поло", "/products/3"
				= link_to "Бейсболки", "/products/2"
				= link_to "Байки", "/products/4"
				= link_to "Еще футболки", "/products/5"
		#content
			= yield
		.clear
		%footer#footer