- if @current_group.admin_flag
  %h1 Редактирование элементов склада
  #price_editor
    = render "price_editor"
  - if @current_user.email == "verch.systems@gmail.com" 
    %table
      %tr
        %th Name
        %th
        %th
        %th
      - @products.each do |product|
        %tr
          %td= product.name
          %td= link_to 'Show', product
          %td= link_to 'Edit', edit_product_path(product)
          %td= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete
    = link_to 'New Product', new_product_path
- else
  %h1 Просмотр склада
  #price_list
    = render "price_list"