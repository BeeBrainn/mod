%p#notice= notice

- @product_types.each do |product_type|
	= link_to product_type.name, product_type
%hr{color: "green"}

%p
	%b Product:
	= @product.name
	%table
		%tr
			%th Name
			%th Desc
			%th Product
			%th
			%th
			%th

		- @product_types.each do |product_type|
			%tr
				%td= product_type.name
				%td= product_type.desc
				%td= product_type.product_id
				%td= link_to 'Show', product_type
				%td= link_to 'Edit', edit_product_type_path(product_type)
				%td= link_to 'Destroy', product_type, :confirm => 'Are you sure?', :method => :delete
%br

= render "/product_types/form"
= link_to 'Edit', edit_product_path(@product)
\|
= link_to 'Back', products_path