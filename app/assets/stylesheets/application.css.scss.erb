#temp_params_info {
	float: left;
	z-index: 10;
	padding: 7px;
	border: 1px solid blue;
	background-color: rgba(70,70,200,0.5);
	position: absolute;
}

body {
	border-collapse: collapse;
	margin: 0;
	padding: 0;
}

#nav {
	padding: 10px 20px;
	border-bottom: 13px solid grey;
	background-color: lightyellow;

	a {
		color: white;
		display: inline-block;
		padding: 3px 8px;
		text-align: center;
		background: url(<%=asset_path 'button_top_up.png'%>) no-repeat center;
		background-size: cover;
		border-top-right-radius: 10px;
		border-bottom-left-radius: 10px;
		text-decoration: none;
		border-left: 2px solid #9c9c9c;
		border-bottom: 2px solid #9c9c9c;
		border-top: 3px solid #9c9c9c;
		border-right: 4px solid #9c9c9c;
	}

	a:hover {
		background-color: #4c4c4c;
		border-left: 2px solid #7c7c7c;
		border-bottom: 2px solid #7c7c7c;
		border-top: 3px solid #7c7c7c;
		border-right: 4px solid #7c7c7c;
	}
}

#nav_user {
	float: right;
	padding-bottom: 2px;
	border-bottom: 2px solid royalblue;

	a {
		color: white;
		display: inline-block;
		padding: 1px 5px;
		text-align: center;
		background-color: royalblue;
		border-top-right-radius: 10px;
		border-bottom-left-radius: 10px;
		text-decoration: none;
		border-left: 2px solid blue;
		border-bottom: 2px solid blue;
		border-top: 3px solid blue;
		border-right: 4px solid blue;
	}

	a:hover {
		background-color: blue;
		border-left: 2px solid darkblue;
		border-bottom: 2px solid darkblue;
		border-top: 3px solid darkblue;
		border-right: 4px solid darkblue;
	}
}

a#nav_user_name {
		color: white;
		display: inline-block;
		padding: 1px 5px;
		text-align: center;
		background-color: #00EE00;
		border-top-right-radius: 10px;
		border-bottom-left-radius: 10px;
		text-decoration: none;
		border-left: 2px solid LimeGreen;
		border-bottom: 2px solid LimeGreen;
		border-top: 3px solid LimeGreen;
		border-right: 4px solid LimeGreen;
	}

	a#nav_user_name:hover {
		background-color: LimeGreen;
		border-left: 2px solid Green;
		border-bottom: 2px solid Green;
		border-top: 3px solid Green;
		border-right: 4px solid Green;
	}

#left_main_column {
	width: 20%;
	float: left;
	padding: 2%;
}

#left_main_menu {
	width: 80%;
	border: 2px solid grey;
	border-top-right-radius: 20px;
	padding: 5%;

	a {
		border-top-right-radius: 15px;
		text-decoration: none;
		display: block;
		padding: 10px 0px;
		text-align: center;
		margin-top: 7px;
		background: url(<%=asset_path 'button_left_up.png'%>) no-repeat center;
		background-size: cover;
	}
	a:hover {
		background: url(<%=asset_path 'button_left_down.png'%>) no-repeat center;
		background-size: cover;
		box-shadow: 0px 0px 10px #1c1c1c;
	}
}

#content {
	width: 72%;
	float: right;
	padding: 2%;
}

.clear {
	clear: both;
}

/*------------------ cart -------------------*/

#cart {
	width: 80%;
	border: 2px solid grey;
	border-top-right-radius: 20px;
	padding: 5%;
	margin-bottom: 10px;	
}